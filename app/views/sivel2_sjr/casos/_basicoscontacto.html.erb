<div class="row">
  <div class="col-md-6">
    <%= f.input :id, readonly: true%>
  </div>
  <div class="col-md-6">
    <%= s.input :fecharec, 
      as: :string, 
      input_html: {
        "data-behaviour" => "datepicker",
        "data-toggle" => 'tooltip',
        "title" => 'Fecha inicial de atención al caso'
      } %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% colus= current_usuario.oficina_id ? 
      Usuario.where(oficina_id: current_usuario.oficina_id).
      order('LOWER(nusuario)') :
      Usuario.order('LOWER(nusuario)') %>
    <%= s.association :usuario,
      collection: colus,
      include_blank: false,
      label_method: :nusuario, 
      value_method: :id %>
  </div>
  <div class="col-md-6">
    <% colof= current_usuario.oficina_id ? 
      Sip::Oficina.habilitados.where(id: current_usuario.oficina_id) :
      Sip::Oficina.habilitados %>
    <%= s.association :oficina,
      collection: colof,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id,
      input_html: {
        "data-toggle" => 'tooltip',
        "title" => 'Oficina del SJR que reporta el caso'
      } %>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= f.input :fecha,
      as: :string, 
      wrapper_html: { style: "padding-bottom: 18px;" },
      input_html: {
        "data-behaviour" => "datepicker",
        "data-toggle" => 'tooltip',
        "title" => 'Fecha en la que el solicitante sufrió el ' + 
        'desplazamiento principal'
      } %>
</div>
<div class="col-md-6">
  <%= render partial: 'basicos_pie', locals: {f: f, s: s} %>
</div>
</div>
<h5>DATOS BÁSICOS DEL CONTACTO</h5>
<%= f.simple_fields_for :victima, Sivel2Gen::Victima.
  where(id_caso: @caso.id).
  where(id_persona: @caso.casosjr.contacto.id) do |victima| %>
  <%= victima.input :id, as: :hidden %> 
  <%= victima.simple_fields_for :persona do |p| %>
    <div class='campos_persona'>
      <%= p.input :id, as: :hidden %>
      <% 
        ph = 'N'
        ac = {'data-autocompleta' => 'no' }
         if (!p.object.nombres || p.object.nombres == 'N' || p.object.nombres == '')
           ph = 'Buscar'
           ac = { }
         end
       %>
      <div class="row">
        <div class="col-md-6">
          <%= p.input :nombres, placeholder: ph,
            value_method: lambda {|t| '' if t.nombres == 'N'},
            :input_html => ac %>
        </div>
        <div class="col-md-6">
          <%= p.input :apellidos, placeholder: 'N',
            value_method: lambda {|t| '' if t.apellidos == 'N'} %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= p.input :tdocumento_id,
            collection: Sip::Tdocumento.habilitados,
            label_method: :nombre,
            value_method: :id %>
        </div>
        <div class="col-md-6">
          <%= p.input :numerodocumento,
            input_html: { 'data-toggle' => 'tooltip',
              title: 'Si el tipo de documento es cédula de ciudadania teclee solo digitos'
          } %>
        </div>
      </div>
      <div class="input string" style="display: none">
        <label class="string control-label">Casos en los que aparece: </label>
        <% 
          r = ""
          sep = ""
          v = Sivel2Gen::Victima.where(id_persona: p.object.id).order(:id_persona)
          v.each do |vic|
            if @caso.id != vic.caso.id
          %>
          <%= link_to vic.caso.id, sivel2_gen.caso_path(vic.caso), target:"_blank" %> 
          <% 
            end
          end 
        %>
      </div>

      <% @meses = [
        ["ENERO", 1], 
        ["FEBRERO", 2], 
        ["MARZO", 3], 
        ["ABRIL", 4], 
        ["MAYO", 5], 
        ["JUNIO", 6], 
        ["JULIO", 7], 
        ["AGOSTO", 8], 
        ["SEPTIEMBRE", 9], 
        ["OCTUBRE", 10], 
        ["NOVIEMBRE", 11], 
        ["DICIEMBRE", 12]] %>
      <% @dias = *(1..31) %>


      <div class="row">
        <div class="col-md-4">
          <%= render partial: 'sip/personas/campo_sexo', locals: {f: p} %>
        </div>
      </div>
    
      <div class="row">
        <div class="col-md-6">
          <% @anios = *(1900..Date.today.year) %>
          <%= p.input :anionac, 
            collection: @anios %>
        </div>
        <div class="col-md-6">
          <%= victima.input :edad, as: :integer %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= p.input :mesnac, collection: @meses %>
        </div>
        <div class="col-sm-6">
          <%= victima.association :rangoedad,
            collection: Sivel2Gen::Rangoedad.habilitados(:rango),
            include_blank: false,
            label_method: :rango, 
            value_method: :id 
          %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= p.input :dianac, collection: @dias %>
        </div>
        <div class="col-md-6">
          <%= victima.input :edadactual, as: :hidden %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= p.association :pais,
            collection: Sip::Pais.habilitados,
            label_method: :nombre,
            value_method: :id %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= p.association :departamento,
            collection: (Sip::Departamento.habilitados.where(
              id_pais: p.object.id_pais)),
              label_method: :nombre,
              value_method: :id %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= p.association :municipio, 
            collection: (Sip::Municipio.habilitados.
                         where(id_departamento: p.object.id_departamento)), 
            label_method: :nombre, value_method: :id %>
        </div>
        <div class="col-md-6">
          <%= p.association :clase,
            collection: (Sip::Clase.habilitados.where(
              id_municipio: p.object.id_municipio)),
              as: :hidden,
              label_method: :nombre,
              value_method: :id %>
        </div>
      </div>

      <%= render partial: 'sip/personas/familiar', locals: {f: p} %>
    </div>

    <div class="row">
      <div class="col-md-6">
    <%= s.input :direccion, 
      input_html: {
      "data-toggle" => 'tooltip',
      "title" => 'Registrar dirección completa, especificando calle, apto, barrio o finca'
    } %>
      </div>
      <div class="col-md-6">
         <%= s.input :telefono, 
           input_html: {
           "data-toggle" => 'tooltip',
           "title" => 'Registrar teléfono del solicitante sin símbolos de puntuación' 
         } %>
      </div>
    </div>
    
    <h5>ANEXOS</h5>
    <div class="row">
    </div>
    <h5>DATOS AMPLIOS DEL CONTACTO</h5>
      <%= victima.simple_fields_for :victimasjr do |victimasjr| %>
        <% [2,4,5,1].each do |i| %>
          <%= render partial: 'victima_campos' + i.to_s, 
            locals: { victima: victima, 
                      victimasjr: victimasjr,
                      persona: p }
          %>
        <% end %>
      <% end %>
    <h5>INFORMACIÓN INSTITUCIONAL Y MANEJO DE DATOS</h5>
    <div class="row">
      <div class="col-md-6">
    <%= s.association :comosupo,
      collection: Sivel2Sjr::Comosupo.habilitados,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id 
    %>
      </div>
      <div class="col-md-6">
    <%= render 'contacto_campos2',
      victima: victima,
      casosjr: s
    %>
      </div>
    </div>

    <h5>Política de datos</h5>
    <div class="row">
    </div>
    <%= s.input :concentimientosjr, 
      boolean_style: :nested,
      inline_label: Sivel2Sjr::Casosjr.human_attribute_name(:concentimientosjr),
      input_html: {
      "data-toggle" => 'tooltip',
      "title" => 'Informar a la persona sobre el uso interno de la información en el SJR' 
    } %>
    <%= s.input :concentimientobd, 
      boolean_style: :nested,
      inline_label: Sivel2Sjr::Casosjr.human_attribute_name(:concentimientobd),
      input_html: {
      "data-toggle" => 'tooltip',
      "title" => 'Informar a la persona sobre el uso de la información en el Banco de Datos de violencia sociopolítica del CINEP' 
    } %>
  <% end %> <!-- simple_fields_for :persona-->
<% end %> <!-- simple_fields_for :victima -->
