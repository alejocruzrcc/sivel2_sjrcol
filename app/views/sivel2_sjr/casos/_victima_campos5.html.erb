<table style="width:100%">
  <tr>
    <th></th>
    <th style="text-align:center">Si</th>
    <th style="text-align:center">No</th>
    <th style="text-align:center">No Responde</th>
    <th></th>
  </tr>
  <tr>
    <td>
      ¿Es cabeza de familia?
    </td>  
      <%= victimasjr.collection_radio_buttons(
        :cabezafamilia, [[true, 'Si'] , [false, 'No'], [nil, 'No Responde']], :first, :last
      ) do |b| %>
        <td style="text-align:center">
          <%= b.label { b.radio_button} %>
        </td> 
      <% end %>
    <td>
    <%= victimasjr.association :rolfamilia,
      collection: Sivel2Sjr::Rolfamilia.habilitados,
      include_blank: false,
      label: "Rol en Familia",
      label_method: :nombre, 
      value_method: :id,
      input_html: {
        "data-toggle" => 'tooltip',
        "title" => 'Solicite a la persona identificar su rol en la familia, con ello podremos analizar el tipo de ayuda que requiere'
      } %>
    </td>  
  </tr>
  <tr>
    <td>
     ¿Tiene SISBEN?
    </td>  
      <%= victimasjr.collection_radio_buttons(
        :tienesisben, [[true, 'Si'] , [false, 'No'], [nil, 'No Responde']], :first, :last
      ) do |b| %>
        <td style="text-align:center">
          <%= b.label { b.radio_button} %>
        </td> 
      <% end %>
    <td>
    <%= victimasjr.association :regimensalud,
      collection: Sivel2Sjr::Regimensalud.all.order(:nombre),
      include_blank: false,
      label: "Régimen de Salud",
      label_method: :nombre, 
      value_method: :id %>
    </td>  
  </tr>
  <tr>
    <td>
      ¿Asiste a la Ecuela?
    </td>  
      <%= victimasjr.collection_radio_buttons(
        :asisteescuela, [[true, 'Si'] , [false, 'No'], [nil, 'No Responde']], :first, :last
      ) do |b| %>
        <td style="text-align:center">
          <%= b.label { b.radio_button } %>
        </td> 
      <% end %>
    <td>
    <%= victimasjr.association :escolaridad,
      collection: Sivel2Gen::Escolaridad.habilitados,
      include_blank: false,
      label: "Nivel Escolar",
      label_method: :nombre, 
      value_method: :id %>
    </td>  
  </tr>
  <tr>
    <td>
      ¿Actualmente Trabajando?
    </td>  
      <%= victimasjr.collection_radio_buttons(
        :actualtrabajando, [[true, 'Si'] , [false, 'No'], [nil, 'No Responde']], :first, :last
      ) do |b| %>
        <td style="text-align:center">
          <%= b.label { b.radio_button } %>
        </td> 
      <% end %>
    <td>
    <%= victima.association :profesion,
      collection: Sivel2Gen::Profesion.habilitados,
      include_blank: false,
      label: "Profesión",
      label_method: :nombre, 
      value_method: :id %>
    <%= victimasjr.association :actividadoficio,
      collection: Sivel2Gen::Actividadoficio.habilitados,
      include_blank: false,
      label: "Actividad/Oficio actual",
      label_method: :nombre, 
      value_method: :id %>
    </td>  
  </tr>
 
</table>
