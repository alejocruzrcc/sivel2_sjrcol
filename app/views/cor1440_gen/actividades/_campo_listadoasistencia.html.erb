
<div class="panel-group" id="acordeonla">
  <div class="panel panel-default" id="panella">
    <div class="panel-heading">
      <div class="panel-title">
        <a data-toggle="collapse" data-target="#colapsala" href="#colapsala">
          Listado de asistencia
        </a>
      </div> <!-- panel-title -->
    </div> <!-- panel-heading -->

    <div id="colapsala" class="panel-collapse collapse">
      <div class="panel-body table-responsive" style="overflow-x:scroll;">
        <table class="tablalistadoasistencia table  table-bordered table-sm ">
          <thead class="thead-light">
            <tr>
              <th>Nombres</th>
              <th>Apellidos</th>
              <th colspan="2">Identificación</th>
              <th>Sexo</th>
              <th>Año nac.</th>
              <th>Mes</th>
              <th>Dia</th>
              <th>Actor social</th>
              <th>Perfil</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="asistencia">
            <%= f.simple_fields_for :asistencia do |a| %>
              <%= render 'asistencia_campos', f: a %>
            <% end %>
          </tbody>
        </table>
        <div class="links">
          <%= link_to_add_association 'Añadir Asistente', f, 
            :asistencia,
            :"data-association-insertion-node" => "tbody#asistencia", 
            :"data-association-insertion-method" => "append", 
            partial: 'asistencia_campos',
            'data-ajax' => File.join(
              Rails.configuration.relative_url_root, 'asistencia/nueva'
            ),
            'data-ajaxdata' => 'actividad_id',
            :class => 'btn-primary'
          %>
        </div>
      </div> <!-- panel-body -->
    </div> <!-- colapsala -->
  </div> <!-- panella -->
</div> <!-- acordeonla -->
