<% if params[:filtro] and params[:filtro][:busproyectofinanciero] %>
  <% pf = params[:filtro][:busproyectofinanciero].to_i %>
  <% col = Cor1440Gen::Actividadpf.where(proyectofinanciero_id: pf) %>
<% else %>
  <% col = Cor1440Gen::Actividadpf.all %>
<% end %>
<%= f.input :actividadpf_id,
  collection: col,
  label: false,
  include_blank: true,
  label_method: :presenta_nombre,
  value_method: :id,
  selected: Sip::ModeloHelper.poromision(params, :actividadpf),
  input_html: { 
    class: 'chosen-select',
    "data-enviarautomatico" => "" } 
%>
