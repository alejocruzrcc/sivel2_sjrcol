<table class="table table-striped" border='1'>
  <thead>
    <tr>
      <th><%= Sivel2Sjr::Actosjr.human_attribute_name(:presponsable) %></th>
      <th><%= Sivel2Sjr::Actosjr.human_attribute_name(:categoria) %></th>
      <th><%= Sivel2Sjr::Actosjr.human_attribute_name(:victima) %></th>
      <TH><%= Sivel2Sjr::Actosjr.human_attribute_name(:fecha) %></th>
      <th>Caus√≥ <%= Sivel2Sjr::Actosjr.human_attribute_name(:desplazamiento) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% if @caso && @caso.actosjr %>
    <% fexpulsion = f_exp ? f_exp : nil%> 
    <% desplazamiento = Sivel2Sjr::Desplazamiento.where(id_caso: @caso.id, fechaexpulsion: fexpulsion)[0]%>
    <% des_id = desplazamiento ? desplazamiento.id : nil %>
    <% actos_des = @caso.actosjr.where(desplazamiento_id: des_id)%>
    <% actos_des.try(:each) do |actosjr| %>
      <tr>
        <td><%= actosjr.acto.presponsable.nombre %></td>
        <td><%= actosjr.acto.categoria.nombre %></td>
        <td><%= actosjr.acto.persona.nombres + ' ' + 
          actosjr.acto.persona.apellidos 
          %></td>
        <td><%= actosjr.fecha %></td>
        <td><%= actosjr.desplazamiento.fechaexpulsion if 
            actosjr.desplazamiento 
        %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            '#',
            :data => { 
                :eliminaracto => "#{actosjr.id_acto}",
            },
            :class => 'btn btn-sm btn-danger eliminaracto' 
          %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>


